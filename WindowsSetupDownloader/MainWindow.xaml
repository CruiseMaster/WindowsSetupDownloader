<Window x:Class="WindowsSetupDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsSetupDownloader"
        mc:Ignorable="d"
        Title="Windows Setup Downloader" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="None"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid x:Name="MainGrid" Opacity="0" d:Opacity="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border x:Name="MainBorder"
                Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="4" Background="White" Opacity="0"
                CornerRadius="20" d:Opacity="0.5" />
        <Image x:Name="Title" Source="WindowsDownloader.png" Margin="20" Grid.Row="1" Grid.Column="2"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" Opacity="0" d:Opacity="1" />

        <TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2"
                   x:Name="StatusText"
                   Text="Warte auf Internetverbindung"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Opacity="0">
            <TextBlock.Effect>
                <DropShadowEffect x:Name="PulseShadow"
                                  Color="Red"
                                  ShadowDepth="0"
                                  BlurRadius="25"
                                  Opacity="1" />
            </TextBlock.Effect>

            <TextBlock.Triggers>
                <!--<DataTrigger Binding="{Binding HasInternet}" Value="true">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="StatusText"
                                    Storyboard.TargetProperty="Opacity"
                                    To="0"
                                    Duration="0:0:3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>

                </DataTrigger>-->
                <EventTrigger RoutedEvent="TextBlock.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">

                            <!-- Pulsieren der Intensität -->
                            <DoubleAnimation
                                Storyboard.TargetName="PulseShadow"
                                Storyboard.TargetProperty="Opacity"
                                From="0.3"
                                To="1.0"
                                Duration="0:0:1.5" />

                            <!-- Leichtes „Atmen“ im Radius -->
                            <DoubleAnimation
                                Storyboard.TargetName="PulseShadow"
                                Storyboard.TargetProperty="BlurRadius"
                                From="15"
                                To="35"
                                Duration="0:0:1.5"
                                AutoReverse="True" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>


        <Grid.Background>
            <ImageBrush x:Name="BgBrush" Opacity="1"
                        ImageSource="2887-Windows_XP-Microsoft_Windows-green-blue-sky-824621292.jpg" />
        </Grid.Background>
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="MainGrid"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:5" />
                        <DoubleAnimation
                            Storyboard.TargetName="BgBrush"
                            Storyboard.TargetProperty="Opacity"
                            To="0.5"
                            Duration="0:0:5"
                            BeginTime="0:0:5" />
                        <DoubleAnimation
                            Storyboard.TargetName="Title"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:5" />
                        <DoubleAnimation
                            Storyboard.TargetName="MainBorder"
                            Storyboard.TargetProperty="Opacity"
                            To="0.5"
                            Duration="0:0:3"
                            BeginTime="0:0:5" />
                        <DoubleAnimation
                            Storyboard.TargetName="StatusText"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:5"
                            BeginTime="0:0:10" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Window>